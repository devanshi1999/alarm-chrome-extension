{
  "manifest_version": 2,

  "name": "alarms",
  "description": "This extension will let you set alarms.",
  "version": "1.0",
  "background": {

    "scripts": ["background.js"],
    "persistent": false

  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
  "alarms"
  ]

}